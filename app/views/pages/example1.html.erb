

<h1> <%= @test.name %> </h1>

  <br>

 <ol>
    <% @test.questions.each do |question| %>

     <li><%= h question.content %></li>
     <br>
      <% for answer in question.answers %>
      <ul>
        <br>
      <li><%= radio_button_tag "response[#{question.id}][answer_id]", "#{answer.id}" %> <%= h answer.content %> </li>
      </ul>


     <% end %>
     <% end %>

<br>

 	<div class="field">
      <%= submit_tag "Submit My Answers" %>
    </div>







