<div id="wrapper">

  <%= render 'sections/sidebar' %>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">

          <h1>Listing Sections</h1>

          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @sections.each do |section| %>
                <tr>
                  <td><%= section.title %></td>
                  <td><%= link_to 'Show', section %></td>
                  <td><%= link_to 'Edit', edit_section_path(section) %></td>
                  <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
    </div>
  </div>  <!-- /#page-content-wrapper -->   
     

<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

<%= link_to 'New Section', new_section_path %>

</div> <!-- wrapper end !-->
